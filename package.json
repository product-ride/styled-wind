{
  "name": "styled-tw",
  "version": "1.0.0",
  "description": "Use tailwind like classess in styled components",
  "author": "ameerthehacker",
  "license": "MIT",
  "repository": "https://github.com/product-ride/styled-tailwind",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "gen-type-declaration": "tsc src/index.tsx --emitDeclarationOnly --declaration",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint --fix src/** example/src/** --ext .ts,.tsx",
    "test:lint-staged": "eslint --fix",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "prettify": "prettier --write",
    "predeploy": "cd example && npm install && npm run build"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/snapshot-serializer"
    ]
  },
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "react": "^16.0.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.155",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-format": "^26.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,html,json,scss,css,md,yml}": [
      "npm run prettify"
    ],
    "*.{spec,js,ts,tsx}": [
      "npm run test:lint-staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "lodash": "^4.17.15",
    "reduce-css-calc": "^2.1.7"
  }
}
